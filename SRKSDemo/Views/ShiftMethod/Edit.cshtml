                                                                        @Html.TextBoxFor(model => model.ShiftMethod.ShiftMethodName, new { @id = "ShiftMethodName", @class = "form-control", @name = "ShiftMethodName", style = "width:89.7%", @placeholder = "Enter ShiftMethod Name", @required = "required", @onchange = "shiftMethodNameCheck();", @oninput = "shiftMethodNameCheck();" })
