                                                                    </div>
                                                                </div>
                                                                <div class="col-sm-5">
                                                                </div>
                                                                <div class="col-sm-6">
                                                                    <span id="ShiftMethodNameError" class="errorMessage"></span>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    @*<input type="submit" class="btn btn-info fa fa-floppy-o" value="Save" onclick="validatr()" />*@
                                                    <button type="submit" class="btn btn-info" id="btnSubmit" onclick="validatr()"><i class="fa fa-floppy-o" aria-hidden="true"></i> Save</button>
                                                    <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- create Modal Finish -->
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/jquery-2.1.4.min.js"></script>
<script>
    $(".EditShift").on("click", function (e) {
        $(".Shift1").click();
        e.preventDefault();
        var Shiftmethod = $(this).attr("id")
        $.getJSON("/ShiftMethod/GetShiftMethodById", { Id: Shiftmethod }, function (data) {
            $.each(data, function (index, item) {
                $("#EditShiftMethodName").val((item.shiftmethodname));
                $("#EditShiftMethodDesc").val((item.shiftmethoddesc));
                $("#EditNoOfShift").val((item.numofshift));
                $("#EditShiftMethodID").val((item.ShiftID));
            })
        })
        return false;
    });

</script>
<script>
    function shiftMethodNameCheck() {
        var shiftMehodName = $("#ShiftMethodName").val();
        $.ajax({
            type: "POST",
            data: { 'ShiftMethodName': shiftMehodName },
            url: "/ShiftMethod/ShiftMethodNameDuplicateCheck",
            async: false,
            success: function (data) {
                if (data == "notok") {
                    $("#ShiftMethodNameError").html('Shift Method name already exists');
                    $("#btnSubmit").attr('disabled', 'disabled');
                } else {
                    $("#ShiftMethodNameError").html('');
                    $("#btnSubmit").removeAttr('disabled', 'disabled');
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert("", "There is some issue in network");
            }
        });
    }
</script>

<script>
    function shiftMethodNameCheckEdit() {
        var editShiftMethodID = $("#EditShiftMethodID").val();
        var editShiftMethodName = $("#EditShiftMethodName").val();
        $.ajax({
            type: "POST",
            data: { 'ShiftMethodID': editShiftMethodID,'ShiftMethodName': editShiftMethodName  },
            url: "/ShiftMethod/ShiftMethodNameDuplicateCheckEdit",
            async: false,
            success: function (data) {
                if (data == "notok") {
                    $("#ShiftMethodNameErrorEdit").html('Shift Method name already exists');
                    $("#btnSubmitEdit").attr('disabled', 'disabled');
                } else {
                    $("#ShiftMethodNameErrorEdit").html('');
                    $("#btnSubmitEdit").removeAttr('disabled', 'disabled');
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert("", "There is some issue in network");
            }
        });
    }
</script>

<script>

    function deleteTargetName(productvariant) {
        //alert (productvariant);
        $(".deleteTargetName").empty();
        $(".alert-danger11").html("Shift Method Name: " +
            productvariant);

    }

    var item_to_delete;
    $(".deleteItem").click(function (e) {
        item_to_delete = $(this).data('id');
        //alert(item_to_delete);
    });
    $('.btnContinueDelete').click(function () {
        window.location = "/ShiftMethod/Delete/" + "?id=" + item_to_delete;
    });

</script>