                                                                    <label class="col-sm-4 control-label">Shift Method Description</label>
                                                                    <div class="col-sm-7">
                                                                        @Html.TextBoxFor(model => model.ShiftMethod.ShiftMethodDesc, new { @id = "ShiftMethodDesc", @class = "form-control", @name = "ShiftMethodDesc", style = "width:89.7%", @placeholder = "Enter ShiftMethod Description", @required = "required" })
                                                                        @*<input type="text" class="form-control1" id="" placeholder="Shift Method Description">*@
                                                                    </div>
                                                                </div>
                                                                <div class="row row-space">
                                                                    <label class="col-sm-4 control-label">Number of Shifts</label>
                                                                    <div class="col-sm-7">
                                                                        @Html.TextBoxFor(model => model.ShiftMethod.NoOfShifts, new { @id = "NoOfShifts", @class = "form-control j_int NoofShift ", @name = "NoOfShifts", style = "width:89.7%", @placeholder = "Enter No of Shifts", @onkeypress = "return event.charCode >=49 && event.charCode <= 57 ", @required = "required", @maxlength = 1 })
