                    $("#Editchannelno").val((item.Editchannelno));
                    $("#countlow").val((item.countlow));
                    $("#counthigh").val((item.counthigh));
                    $("#sensorlimitlow").val((item.sensorlimitlow));
                    $("#sensorlimithigh").val((item.sensorlimithigh));
                });
            });
