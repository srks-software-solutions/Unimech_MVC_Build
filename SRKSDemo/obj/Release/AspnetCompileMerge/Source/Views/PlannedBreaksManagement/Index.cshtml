@model IEnumerable<SRKSDemo.Server_Model.tblplannedbreak>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Index</h2>*@

    <!-- page content -->
<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Planned Breaks Management</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a role="button" href="@Url.Action("Create", "PlannedBreaksManagement")"  class="btn btn-my" style="margin-top: 5px;"><i class="fa fa-plus-square" aria-hidden="true"></i>&nbsp;Add New</a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-fixed-header" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Reason Name</th>
                                    <th>From Time</th>
                                    <th>To Time</th>

                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                             @foreach (var item in Model)
                             {
                                <tr>
                                    <td id="tdReason_@item.BreakID">@Html.DisplayFor(modelItem => item.BreakReason)</td>
                                    <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                                    <td>@Html.DisplayFor(modelItem => item.EndTime)</td>

                                    <td>
                                        <ul class="actionbtnn">

                                            <li class="actionbtn"><a href="@Url.Action("Edit", "PlannedBreaksManagement", new {id = item.BreakID})" id="@(@item.BreakID)" role="button" class="btn btn-round btn-info" data-title="Edit"><i class="fa fa-pencil fa_lg" aria-hidden="true" data-placement="top" data-toggle="tooltip" title="Edit Planned Breaks Management"></i></a></li>

                                            <li class="actionbtn"><button class="btn btn-round btn-danger deleteItem" data-id="@item.BreakID" onclick="deleteTargetName('@item.BreakID')" data-title="Edit" data-toggle="modal" data-target="#delete-plant"><i class="fa fa-trash fa-lg" aria-hidden="true" data-placement="top" data-toggle="tooltip" title="Delete Planned Breaks Management"></i></button></li>

                                            <!-- Delete Modal Start -->
                                            <div class="modal fade" id="delete-plant" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static" aria-labelledby="myModalLabel">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                            <h4 class="modal-title" id="myModalLabel"></h4>
                                                            <div class="x_panel">
                                                                <div class="x_title">
                                                                    <h5>Delete Planned Breaks Management</h5>
                                                                </div>
                                                                <div class="x_content">
                                                                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Detail?<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<label class="alert-danger">Reason Name:</label>&nbsp;&nbsp;<label class="alert-danger" id="deleteItemName"></label></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-danger btnContinueDelete"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                                                            <button type="button" class="btn btn-info" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Delete Modal Finish -->

                                        </ul>
                                    </td>
                                </tr>
                             }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

<script src="~/js/jquery-2.1.4.min.js"></script>
<!-- FastClick -->
<script src="~/vendors/fastclick/lib/fastclick.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script>

    function deleteTargetName(productvariant) {
        $(".deleteTargetName").empty();
        $(".deleteTargetName").html("Multiple workorername: " +
            productvariant);
    }
    var item_to_delete;
    $(".deleteItem").click(function (e) {
        item_to_delete = $(this).data('id');
        var name = $("#tdReason_" + item_to_delete).html();
        $("#deleteItemName").html('');
        $("#deleteItemName").html(name);

    });
    $('.btnContinueDelete').click(function () {
        window.location = "/PlannedBreaksManagement/Delete/" + "?id=" + item_to_delete;
    });

</script>