@model SRKSDemo.RolesModel
@{
    ViewBag.Title = "Index";
}
<div class="container body">
    <div class="main_container">
        <div class="right_col" role="main">
            <div class="">

                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Role Details</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><button type="button" class="btn btn-default" data-toggle="modal" data-target="#create-plant" style="margin-top: 10px;"><i class="fa fa-plus-square" aria-hidden="true"></i>&nbsp;Add New</button></li>
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <table id="datatable-fixed-header" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Role</th>
                                            <th>Role Display Name</th>
                                            <th>Role Description</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.RoleList)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.RoleName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.RoleDisplayName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.RoleDesc)</td>
                                                <td>
                                                    <ul class="actionbtnn">

                                                        <!-- create Modal Start -->
                                                        @using (Html.BeginForm("Create", "Roles", FormMethod.Post, new { @class = "form-horizontal bordered-row" }))
                                                        {
                                                            <div class="modal fade" id="create-plant" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static" aria-labelledby="myModalLabel">
                                                                <div class="modal-dialog" role="document">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                            <h4 class="modal-title" id="myModalLabel"></h4>
                                                                            <div class="x_panel">
                                                                                <div class="x_title">
                                                                                    <h5>Create Role Details</h5>
                                                                                </div>
                                                                                <div class="x_content">
                                                                                    <form class="form-horizontal form-label-left" novalidate>
                                                                                        <div class="row row-space">
                                                                                            <label class="col-sm-5 control-label">Role Name</label>
                                                                                            <div class="col-sm-6">
                                                                                                @Html.TextBoxFor(model => model.Role.RoleName, new { @id = "RoleName", @class = "form-control", @name = "Role Name", style = "width:89.7%", @placeholder = "Enter Role Name", @required = "required" })
                                                                                                @*<input type="text" class="form-control1" id="" placeholder="Role Name">*@
                                                                                            </div>
                                                                                        </div>

                                                                                        <div class="row row-space">
                                                                                            <label class="col-sm-5 control-label">Role Display Name</label>
                                                                                            <div class="col-sm-6">
                                                                                                @Html.TextBoxFor(model => model.Role.RoleDisplayName, new { @id = "RoleDisplayName", @class = "form-control", @name = "RoleDisplayName", style = "width:89.7%", @placeholder = "Enter Role Display Name", @required = "required" })
                                                                                                @*<input type="text" class="form-control1" id="" placeholder="Role Display Name">*@
                                                                                            </div>
                                                                                        </div>
                                                                                        <div class="row row-space">
                                                                                            <label class="col-sm-5 control-label">Role Description</label>
                                                                                            <div class="col-sm-6">
                                                                                                @Html.TextBoxFor(model => model.Role.RoleDesc, new { @id = "RoleDesc", @class = "form-control", @name = "RoleDesc", style = "width:89.7%", @placeholder = "Enter Role Description", @required = "required" })
                                                                                                @*<input type="text" class="form-control1" id="" placeholder="Role Description">*@
                                                                                            </div>
                                                                                        </div>
                                                                                    </form>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            @*<input type="submit" class="btn btn-info" value="Save" /><i class="fa fa-floppy-o" aria-hidden="true"></i>*@
                                                                            <button type="submit" class="btn btn-info"><i class="fa fa-floppy-o" aria-hidden="true"></i> Save</button>
                                                                            <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }

                                                        @Html.HiddenFor(Model => Model.Role.CreatedBy)
                                                        @Html.HiddenFor(Model => Model.Role.CreatedOn)
                                                        @Html.HiddenFor(Model => Model.Role.IsDeleted)
                                                        @Html.HiddenFor(Model => Model.Role.Role_ID)
                                                        <!-- create Modal Finish -->
                                                        @using (Html.BeginForm("Edit", "Roles", FormMethod.Post))
                                                        {
                                                                <!-- edit Modal Start -->
                                                            <div class="modal fade" id="edit-plant" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static" aria-labelledby="myModalLabel">
                                                                <div class="modal-dialog" role="document">
                                                                    <div class="modal-content">
                                                                        <div class="modal-header">
                                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                            <h4 class="modal-title" id="myModalLabel"></h4>
                                                                            <div class="x_panel">
                                                                                <div class="x_title">
                                                                                    <h5>Edit Role Details</h5>
                                                                                </div>
                                                                                <div class="x_content">
                                                                                    <form class="form-horizontal form-label-left" novalidate>
                                                                                        <div class="row row-space">
                                                                                            <label class="col-sm-5 control-label">Role Name</label>
                                                                                            <div class="col-sm-6">
                                                                                                @*<input type="text" class="form-control1" id="" placeholder="Role Name">*@
                                                                                                @Html.HiddenFor(model => model.Role.Role_ID, new { @id = "EditRoleId", @class = "form-control", @name = "RoleId", @placeholder = "Enter Role Name", @required = "required" })
                                                                                                @Html.TextBoxFor(model => model.Role.RoleName, new { @id = "EditRoleName", @class = "form-control", @name = "Role Name", @placeholder = "Enter Role Name", @required = "required" })
                                                                                            </div>
                                                                                        </div>

                                                                                        <div class="row row-space">
                                                                                            <label class="col-sm-5 control-label">Role Display Name</label>
                                                                                            <div class="col-sm-6">
                                                                                                @Html.TextBoxFor(model => model.Role.RoleDisplayName, new { @id = "EditRoleDisplayName", @class = "form-control", @name = "RoleDisplayName", @placeholder = "Enter Role DisplayName", @required = "required" })
                                                                                                @*<input type="text" class="form-control1" id="" placeholder="Role Display Name">*@
                                                                                            </div>
                                                                                        </div>
                                                                                        <div class="row row-space">
                                                                                            <label class="col-sm-5 control-label">Role Description</label>
                                                                                            <div class="col-sm-6">
                                                                                                @Html.TextBoxFor(model => model.Role.RoleDesc, new { @id = "EditRoleDescription", @class = "form-control", @name = "Role Description", @placeholder = "Enter Role Description", @required = "required" })
                                                                                                @*<input type="text" class="form-control1" id="" placeholder="Role Description">*@
                                                                                            </div>
                                                                                        </div>
                                                                                    </form>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <input type="submit" value="Update" class="btn btn-info" />
                                                                            @*<button type="button" class="btn btn-info"><i class="fa fa-floppy-o" aria-hidden="true"></i> Update</button>*@
                                                                            <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                                                                                    <!-- edit Modal Finish -->
                                                        }


                                                        <li class="actionbtn"><a href="@Url.Action("Edit", "Roles", new { id = item.Role_ID })" id="@(@item.Role_ID)" class="btn btn-round btn-info EditRole" data-title="Edit" data-toggle="modal" data-target="#edit-plant"><i class="fa fa-pencil fa-lg" aria-hidden="true" data-placement="top" data-toggle="tooltip" title="Edit Role Details"></i></a></li>

                                                        <li class="actionbtn"><button class="btn btn-round btn-danger deleteItem" data-id="@item.Role_ID" onclick="deleteTargetName('@item.RoleName')" data-title="Edit" data-toggle="modal" data-target="#delete-plant"><i class="fa fa-trash fa-lg" aria-hidden="true" data-placement="top" data-toggle="tooltip" title="Delete Role details"></i></button></li>

                                                        <!-- Delete Modal Start -->
                                                        <div class="modal fade" id="delete-plant" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static" aria-labelledby="myModalLabel">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                        <h4 class="modal-title" id="myModalLabel"></h4>
                                                                        <div class="x_panel">
                                                                            <div class="x_title">
                                                                                <h5>Delete Role Details</h5>
                                                                            </div>
                                                                            <div class="x_content">
                                                                                <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Detail?<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<label class="alert-danger11">Role Name:</label></div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        @*Html.ActionLink("Yes", "Delete", "Roles", new { id = item.Role_ID }, new { @class = "btn btn-danger btnContinueDelete" })*@
                                                                        <button type="submit" class="btn btn-danger btnContinueDelete"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                                                                        <button type="button" class="btn btn-info" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!-- Delete Modal Finish -->

                                                    </ul>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <li class="actionbtn"><button class="btn btn-round btn-info Role" style="display:none" data-title="Edit" data-toggle="modal" data-target="#edit-plant"><i class="fa fa-pencil fa-lg" aria-hidden="true" data-placement="top" data-toggle="tooltip" title="Edit Role details"></i></button></li>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
    </div>
</div>
<script src="~/js/jquery-2.1.4.min.js"></script>
<script>
    $(".EditRole").on("click", function (e) {
        $(".Role").click();
        e.preventDefault();
        var RoleId = $(this).attr("id")
        $.getJSON("/Roles/GetRoleById", { Id: RoleId }, function (data) {
            $.each(data, function (index, item) {
                $("#EditRoleId").val(RoleId);
                $("#EditRoleName").val((item.rolename));
                $("#EditRoleDisplayName").val((item.roledesc));
                $("#EditRoleDescription").val((item.roledisplay));
            });
        });
        return false;
    });

</script>
<script>

    function deleteTargetName(productvariant) {
        //alert (productvariant);
        $(".deleteTargetName").empty();
        $(".alert-danger11").html("Role Name: " +
            productvariant);

    }

    var item_to_delete;
    $(".deleteItem").click(function (e) {
        item_to_delete = $(this).data('id');
        //alert(item_to_delete);
    });
    $('.btnContinueDelete').click(function () {
        window.location = "/Roles/Delete/" + "?id=" + item_to_delete;
    });

</script>