@model IEnumerable<SRKSDemo.Server_Model.tblholiday>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <!-- page content -->
<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Holiday Management</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li><a role="button" href="@Url.Action("Create", "HolidayManagement")"  class="btn btn-my" style="margin-top: 10px;"><i class="fa fa-plus-square" aria-hidden="true"></i>&nbsp;Add New</a></li>
                            <li><a role="button"href="@Url.Action("Create", "HolidayManagement")"  class="btn btn-my" style="margin-top: 10px;"><i class="fa fa-calendar-plus-o" aria-hidden="true"></i>&nbsp;Make Every Sunday as holiday in this Year</a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table id="datatable-fixed-header" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Reason</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {


                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.HolidayDate)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                                    <td>
                                        <ul class="actionbtnn">

                                            <li class="actionbtn"><a role="button" href="@Url.Action("Edit", "HolidayManagement", new {id = item.HolidayId})" id="@(@item.HolidayId)" class="btn btn-round btn-info" data-title="Edit"><i class="fa fa-pencil fa_lg" aria-hidden="true" data-placement="top" data-toggle="tooltip" title="Edit Holiday Management"></i></a></li>
                                            <li class="actionbtn"><button class="btn btn-round btn-danger deleteItem"  data-id="@item.HolidayId" onclick="deleteTargetName('@item.HolidayId')" data-title="Edit" data-toggle="modal" data-target="#delete-plant"><i class="fa fa-trash fa-lg" aria-hidden="true" data-placement="top" data-toggle="tooltip" title="Delete Holiday Management"></i></button></li>

                                            <!-- Delete Modal Start -->
                                            <div class="modal fade" id="delete-plant" tabindex="-1"   role="dialog" data-keyboard="false" data-backdrop="static" aria-labelledby="myModalLabel">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                            <h4 class="modal-title" id="myModalLabel"></h4>
                                                            <div class="x_panel">
                                                                <div class="x_title">
                                                                    <h5>Delete Holiday Management</h5>
                                                                </div>
                                                                <div class="x_content">
                                                                    <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Detail?<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<label class="alert-danger">Date:</label>&nbsp;&nbsp;<label class="alert-danger">16-08-2017</label></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-danger btnContinueDelete"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                                                            <button type="button" class="btn btn-info" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Delete Modal Finish -->

                                        </ul>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

<script src="~/js/jquery-2.1.4.min.js"></script>
<!-- FastClick -->
<script src="~/vendors/fastclick/lib/fastclick.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script>

    function deleteTargetName(productvariant) {
        $(".deleteTargetName").empty();
        $(".deleteTargetName").html("Multiple workorername: " +
            productvariant);
    }
    var item_to_delete;
    $(".deleteItem").click(function (e) {
        item_to_delete = $(this).data('id');
        alert(item_to_delete);
    });
    $('.btnContinueDelete').click(function () {
        window.location = "/HolidayManagement/Delete/" + "?id=" + item_to_delete;
    });

</script>