@model IEnumerable<SRKSDemo.Server_Model.tblshiftdetail>
@{
    ViewBag.Title = "Shift Details";

}


<div class="container body">
    <div class="main_container">
        <div class="right_col" role="main">
            <div class="">

                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Shift Details</h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li>
                                        <span>
                                            @Html.ActionLink(" Add New", "Create", "ShiftDetails", new { @class = "btn btn-default" }, new { @style = "margin-top: 10px; padding-top:7px;", @class = "btn btn-default fa fa-plus-square" })
                                            @*<a role="button" href="create-shift-detail.html" class="btn btn-default " style="margin-top: 10px;"><i class="fa fa-plus-square" aria-hidden="true"></i>&nbsp;Add New</a>*@
                                        </span>
                                    </li>
                                    <li>
                                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <table id="datatable-fixed-header" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th>Shift Method Name</th>
                                            <th>Shift Name</th>
                                            <th>Shift Description</th>
                                            <th>Start Time</th>
                                            <th>End Time</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.tblshiftmethod.ShiftMethodName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ShiftDetailsName)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ShiftDetailsDesc)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ShiftStartTime)</td>
                                                <td>@Html.DisplayFor(modelItem => item.ShiftEndTime)</td>
                                                <td>
                                                    <ul class="actionbtnn">
                                                        @*@Html.ActionLink(" ", "Edit", new { id = item.MSDID }, new { @class = " blue  btn-lg fa fa-edit", @style = "color:white;text-decoration:none" })*@
                                                        <li class="actionbtn"><a href="@Url.Action("Edit","ShiftDetails", new { id = item.ShiftDetailsID })" id="@(@item.ShiftDetailsID)" class="btn btn-round btn-info" data-title="Edit" role="button"><i class="fa fa-pencil fa-lg" aria-hidden="true" data-placement="top" data-toggle="tooltip" title="Edit Shift" style="line-height: 24px;"></i></a></li>

                                                        @*<li class="actionbtn"><button class="btn btn-round btn-danger" data-title="Edit" data-toggle="modal" data-target="#delete-plant"><i class="fa fa-trash fa-lg" aria-hidden="true" data-placement="top" data-toggle="tooltip" title="Delete Shift detail"></i></button></li>*@
                                                        <li class="actionbtn"><button class="btn btn-round btn-danger deleteItem" data-id="@item.ShiftDetailsID" onclick="deleteTargetName('@item.ShiftDetailsName')" data-title="Edit" data-toggle="modal" data-target="#delete-plant"><i class="fa fa-trash fa-lg" aria-hidden="true" data-placement="top" data-toggle="tooltip" title="Delete Shift"></i></button></li>


                                                        <!-- Delete Modal Begin -->

                                                        <div class="modal fade" id="delete-plant" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static" aria-labelledby="myModalLabel">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                        <h4 class="modal-title" id="myModalLabel"></h4>
                                                                        <div class="x_panel">
                                                                            <div class="x_title">
                                                                                <h5>Shift Details</h5>
                                                                            </div>
                                                                            <div class="x_content">
                                                                                <div class="alert alert-danger">
                                                                                    <span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Detail?<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<label class="alert-danger11">ShiftDetails Name:</label>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-danger btnContinueDelete "><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                                                                            <button type="button" class="btn btn-info" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <!--Delete Method completed-->
                                                        <!-- Delete Modal Start -->
                                                        @*<div class="modal fade" id="delete-plant" tabindex="-1" role="dialog" data-keyboard="false" data-backdrop="static" aria-labelledby="myModalLabel">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                        <h4 class="modal-title" id="myModalLabel"></h4>
                                                                        <div class="x_panel">
                                                                            <div class="x_title">
                                                                                <h5>Delete Shift Detail</h5>
                                                                            </div>
                                                                            <div class="x_content">
                                                                                <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Detail?<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<label class="alert-danger">Shift Method Name:</label>&nbsp;&nbsp;<label class="alert-danger">Shift1</label></div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        @Html.ActionLink("Delete ShiftDetails", "Delete", "ShiftDetails", new { id = item.ShiftDetailsID }, new { @class = "btn btn-danger" })
                                                                        @*<button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>*@
                                                        @*<button type="button" class="btn btn-info" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
                                                            </div>
                                                                                                                            </div>
                                                                                                                        </div>
                                                                                                                    </div>*@
                                                        <!-- Delete Modal Finish -->

                                                    </ul>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
<script src="~/js/jquery-2.1.4.min.js"></script>
<script>

    function deleteTargetName(item_to_delete) {
        //alert (productvariant);
        $(".deleteTargetName").empty();
        $(".alert-danger11").html("ShiftDetailsID: " +
            item_to_delete);

    }

    var item_to_delete;
    $(".deleteItem").click(function (e) {
        item_to_delete = $(this).data('id');
        //alert(item_to_delete);
    });
    $('.btnContinueDelete').click(function () {
        window.location = "/ShiftDetails/Delete/" + "?id=" + item_to_delete;
    });

</script>