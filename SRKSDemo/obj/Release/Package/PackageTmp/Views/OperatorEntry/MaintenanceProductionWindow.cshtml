@model SRKSDemo.Server_Model.tblSetupMaint

@{
    ViewBag.Title = "UnitWorks - Maintenances";
    Layout = "~/Views/Shared/_OperatorLayout.cshtml";
}
@if (Session["message"].ToString() != "nullinsess")
{
    <script>
        function checkhref() {
            $("#checkhref").attr("href", "/OperatorEntry/EndMaintenance?smValue=1");
        }
    </script>
}
else
{
    <script>
        function checkhref() {
            $("#checkhref").attr("href", "/OperatorEntry/EndMaintenance?smValue=2");
        }
    </script>
}
<form method="post" action="/OperatorEntry/EndMaintenance">
    <div class="">
        <div class="">
            @if (Session["message"].ToString() != "nullinsess")
            {
                <span class="label lblerror">@Session["message"].ToString()</span>
            }
            <div class="mp_content">
                <h3>
                    Maintenance to Production
                </h3>
                <div class="row">
                    <div class="col-sm-3">
                        <label class="set-label">
                            Maintenance Start Time:
                        </label>
                        <label class="set-label">
                            @Html.DisplayFor(m => m.StartTime)
                        </label>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label class="set-label">
                            Maintenance Reason:
                        </label>
                        <label class="set-label">
                            @Html.DisplayFor(m => m.tbllossescode.LossCodeDesc)
                        </label>
                    </div>
                </div>
                <div class="col-sm-3">
                    <a class="btn-start btn-info"  id="checkhref" href="/OperatorEntry/EndMaintenance" onclick="checkhref();">
                        Start Production
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>